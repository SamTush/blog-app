<main>
  <div id="user-page">
  <div class="btn-container">
    <%= link_to "Home", "../../" %>
    <div class="back-link-container">
      <%= link_to "Back", :back, class: "back-link" %>
    </div>
        <div class="users-link-container">
    <%= link_to "Users", users_path, class: "users-link" %>
  </div>
  </div>

  <h1>Create New Post</h1>
  
  <%= form_with model: @post, url: user_posts_path(@current_user) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, placeholder: 'Post title' %>
    </div>
  
    <div class="field">
      <%= form.label :text %>
      <%= form.text_area :text, placeholder: 'Post' %>
    </div>
  
    <%= form.submit 'Create Post' %>
  <% end %>
</main>
